root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{kt, kts}]
ij_kotlin_imports_layout = *
ij_kotlin_name_count_to_use_star_import = 999
ij_kotlin_name_count_to_use_star_import_for_members = 999
indent_size = 4
max_line_length = off

[*.groovy]
indent_size = 4

[*.java]
indent_size = 4

[*.yml]
indent_size = 2

[*.md]
indent_size = 4
